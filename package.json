{
  "name": "physics-book",
  "version": "1.0.0",
  "description": "Textbook for General Physics I",
  "repository": "https://github.com/veillette/physics-book",
  "type": "module",
  "scripts": {
    "check-links": "node scripts/check-links.js",
    "check-links:fast": "node scripts/check-links.js --timeout 5000 --concurrent 15",
    "find-orphans": "node scripts/find-orphan-files.js",
    "find-orphans:cleanup": "node scripts/find-orphan-files.js --generate-cleanup",
    "standardize-links": "node scripts/standardize-links.js",
    "standardize-links:apply": "node scripts/standardize-links.js --apply",
    "test": "npm run check-links",
    "test:ci": "npm run check-links -- --timeout 15000",
    "audit": "npm run check-links && npm run find-orphans && npm run validate-figures",
    "pdf:all": "node scripts/generatePdf.js --all",
    "pdf:combined": "node scripts/generatePdf.js --combined",
    "pdf:chapter": "node scripts/generatePdf.js --chapter",
    "pdf:help": "node scripts/generatePdf.js --help",
    "pdf:install": "npx playwright install chromium",
    "generate-icons": "node scripts/generate-icons.js",
    "validate-figures": "node scripts/validate-figures.js",
    "validate-figures:pattern": "node scripts/validate-figures.js --check-pattern",
    "validate-figures:missing": "node scripts/validate-figures.js --check-missing",
    "check-math": "node scripts/check-math-delimiters.js",
    "parse-summary": "node scripts/parse-summary.js",
    "update-front-matter": "node scripts/update-front-matter.js",
    "rename-figures": "node scripts/rename-figures.js",
    "convert-webp": "node scripts/convert-to-webp.js",
    "check-accessibility": "node scripts/check-accessibility.js",
    "check-accessibility:strict": "node scripts/check-accessibility.js --strict",
    "validate-yaml": "node scripts/validate-yaml.js",
    "validate-yaml:strict": "node scripts/validate-yaml.js --strict"
  },
  "dependencies": {
    "@playwright/test": "^1.57.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "sharp": "^0.32.3",
    "simple-git": "^3.19.1",
    "http-server": "^14.1.1",
    "node-fetch": "^3.3.2",
    "chalk": "^5.3.0",
    "glob": "^10.3.10"
  }
}
